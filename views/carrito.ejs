<!DOCTYPE html>
<html lang="en">
    <link rel="stylesheet" href="../css/carrito.css"/>
    <%- include("./partials/head") %>
<body>

    <%- include("./partials/header") %>
    
    <main>
        
        <div class="flex-carrito">

            <section class="columnas-carrito">
                <article class="titulos-carrito">
                    <p>CARRITO</p>
                    <p class="titulos-chicos-carrito"></p>
                </article>
                <article id="info-carrito" class="subtitulos-carrito">
                    
                    <div class="info-texto-carrito">
                        <p>INFO:</p>
                        <div id="item-en-seccion">
                    
                        </div>
                    </div>
                </article>
                <article class="subtitulos-carrito">
                    <p>SUBTOTAL:</p>

                    <div id="subtotal">

                    </div>

                </article>
            </section>

            <section class="columnas-carrito">
                <article class="titulos-carrito">
                    <p>RESUMEN</p>
                </article>
                <article class="subtitulos-carrito">
                    <p>DESCUENTO:</p>

                    <div id="descuento">

                    </div>

                </article>
                <article class="subtitulos-carrito">
                    <p>TOTAL:</p>

                    <div id="total">

                    </div>
                    
                </article>
                <div class="botones-carrito">
                    <button type="button" class="btn btn-success">Comprar</button>
                    <button type="button" class="btn btn-primary">Seguir Compra</button>
                </div>

            </section>

        </div>

    </main>

    <%- include("./partials/footer") %>
 

    <script src="/js/carrito.js"></script>
</body>
</html>