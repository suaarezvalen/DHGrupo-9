                    <img id="logo-producto" src="../../img/<%=detalleProducto.img  %> ">
                    <p id="precio"><%=detalleProducto.precio %> </p>
                    <a href="/carrito/<%=detalleProducto.id %> "><button id="agregar-carrito" type="button">COMPRAR</button></a>
                    <form action="/product/detalle/<%=detalleProducto.id%>?_method=DELETE" method="POST" style="display: inline-flex" onsubmit="return confirm('Esta seguro que desea eliminarlo?');"> 
