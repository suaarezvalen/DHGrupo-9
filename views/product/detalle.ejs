            <section id="productos-similares">
                <% for(let i=0;i<novedadesProducto.length;i++) {%> 
                <section class="similares">
                    <img class="foto-similar" src="../../img/<%=novedadesProducto[i].img %> ">
                        <section class="info-similares">
                            <h4 class="datos-similares"><%=novedadesProducto[i].titulo  %></h4>
