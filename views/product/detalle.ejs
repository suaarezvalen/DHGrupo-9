<!DOCTYPE html>
<html lang="en">
    
    <link rel="stylesheet" href="../../css/detalle.css"/>
    <%- include("../partials/head") %>

<body>
    
    <%- include("../partials/header") %>
    <main>
        <div id="productos">
            <section id="lado-izquierdo">

                <div class="container" style="width:100%;">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel" >
                      <ol class="carousel-indicators" >
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                        <li data-target="#myCarousel" data-slide-to="3"></li>
                      </ol>
                  
                      <div class="carousel-inner" >
                        <div class="item active">
                            <img src="../../img/<%=detalleProductoImgGameplay[1] %> "  style="width:100%;">
                        </div>
                  
                        <div class="item">
                            <img src="../../img/<%=detalleProductoImgGameplay[2] %> "  style="width:100%;">
                        </div>
                      
                        <div class="item">
                            <img src="../../img/<%=detalleProductoImgGameplay[3] %> "  style="width:100%;">
                        </div>
                      
                        <div class="item">
                            <img src="../../img/<%=detalleProductoImgGameplay[4] %> "  style="width:100%;">
                        </div>
                    </div>
                  
                      <a class="left carousel-control" href="#myCarousel" data-slide="prev" >
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="right carousel-control" href="#myCarousel" data-slide="next" >
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                </div>

                <section id="caja-info">
                    <h1 id="titulo-juego"><%=detalleProducto.titulo  %> </h1>
                    <br>
                    <br>
                    <p class="info-juego"><%=detalleProducto.descripcion  %> </p>     
                    <br>
                </section>
            </section>     
            <section id="lado-derecho">  
                <article id="contenedor-derecho">
                        <img id="logo-producto" src="../../img/<%=detalleProductoImg  %> ">
                        <p id="precio">$<%=detalleProducto.precio %></p>
                        <button type="submit" id="agregar-carrito" >COMPRAR AHORA</button>
                </article>
            </section> 
        </div>
        <div id="botones-formu">
        <form action="/product/detalle/<%=detalleProducto.id%>?_method=DELETE" method="POST" style="display: inline-flex" onsubmit="return confirm('Esta seguro que desea eliminarlo?');"> 
            <button type="submit" id="agregar-carrito">ELIMINAR</button>
        </form>
        <form action="/product/editar/<%=detalleProducto.id%>"> 
            <button type="submit" id="agregar-carrito">EDITAR PRODUCTO</button>
        </form>  
        </div>    
     
    </main>
    
    <%- include("../partials/footer") %>
    
    <script src="./../../js/detalleProducto.js"></script>

</body>
</html>